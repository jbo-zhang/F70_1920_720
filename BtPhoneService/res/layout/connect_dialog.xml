<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="686dp"
        android:layout_height="319dp"
        android:background="@drawable/connect_dialog" >

        <ImageView
            android:id="@+id/img_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/icon_dialog" />

        <TextView
            android:id="@+id/txt_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="38dp"
            android:layout_toRightOf="@id/img_hint"
            android:singleLine="true"
            android:text="@string/bt_connect"
            android:textColor="#00fffd"
            android:textSize="28sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="143dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/connect_que"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="220dp"
            android:background="@drawable/btn_dialog"
            android:singleLine="true"
            android:text="@string/no"
            android:textColor="@android:color/black"
            android:textSize="26sp" />

        <Button
            android:id="@+id/btn_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            android:layout_marginTop="220dp"
            android:background="@drawable/btn_dialog"
            android:singleLine="true"
            android:text="@string/yes"
            android:textColor="@android:color/black"
            android:textSize="26sp" />
    </RelativeLayout>

</RelativeLayout>