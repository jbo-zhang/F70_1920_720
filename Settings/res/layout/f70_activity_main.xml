<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="horizontal" >

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/main_layout_scroll_height" >

            <!-- 主菜单 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:splitMotionEvents="false"
                android:orientation="vertical" >

                <!-- 通用设置 -->

                <RelativeLayout
                    android:id="@+id/commonsetting_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_title_height"
                    android:background="@drawable/system_setting_selector"
                    android:clickable="true" >

                    <ImageView
                        android:id="@+id/main_common"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/title_interval_text"
                        android:src="@drawable/settings_main_commonsetting" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/main_text_left_intervel"
                        android:layout_toRightOf="@+id/main_common"
                        android:text="@string/commonsetting_title"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/setting_titletext" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/main_arrow_maginright"
                        android:src="@drawable/settings_main_arrow" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_intervel_height"
                    android:layout_gravity="center"
                    android:background="@color/title_intervel_color" />

                <!-- 音效设置 -->

                <RelativeLayout
                    android:id="@+id/soundsetting_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_title_height"
                    android:background="@drawable/system_setting_selector"
                    android:clickable="true" >

                    <ImageView
                        android:id="@+id/main_sound"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/title_interval_text"
                        android:src="@drawable/settings_main_soundsetting" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/main_text_left_intervel"
                        android:layout_toRightOf="@+id/main_sound"
                        android:text="@string/soundsetting_title"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/setting_titletext" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/main_arrow_maginright"
                        android:src="@drawable/settings_main_arrow" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_intervel_height"
                    android:layout_gravity="center"
                    android:background="@color/title_intervel_color" />

                <!-- 蓝牙设置 -->

                <RelativeLayout
                    android:id="@+id/bluetoothsetting_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_title_height"
                    android:background="@drawable/system_setting_selector"
                    android:clickable="true"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/main_ble"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/title_interval_text"
                        android:src="@drawable/settings_main_bt" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/main_text_left_intervel"
                        android:layout_toRightOf="@+id/main_ble"
                        android:text="@string/bluetoothsetting_title"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/setting_titletext" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/main_arrow_maginright"
                        android:src="@drawable/settings_main_arrow" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_intervel_height"
                    android:layout_gravity="center"
                    android:background="@color/title_intervel_color" />

                <!-- 车辆设置 -->

                <RelativeLayout
                    android:id="@+id/carsetting_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_title_height"
                    android:background="@drawable/system_setting_selector"
                    android:clickable="true"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/main_carsetting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/title_interval_text"
                        android:src="@drawable/settings_main_carsetting" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/carsetting_title_maginleft"
                        android:layout_toRightOf="@+id/main_carsetting"
                        android:text="@string/carsetting_title"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/setting_titletext" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/main_arrow_maginright"
                        android:src="@drawable/settings_main_arrow" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_intervel_height"
                    android:layout_gravity="center"
                    android:background="@color/title_intervel_color" />
                <!-- 原厂设置 -->

                <RelativeLayout
                    android:id="@+id/backupsetting_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_title_height"
                    android:background="@drawable/system_setting_selector"
                    android:clickable="true"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/main_backup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/title_interval_text"
                        android:src="@drawable/settings_main_backup" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/backupsetting_title_maginleft"
                        android:layout_toRightOf="@+id/main_backup"
                        android:text="@string/backup_title"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/setting_titletext" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/main_arrow_maginright"
                        android:src="@drawable/settings_main_arrow" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_intervel_height"
                    android:layout_gravity="center"
                    android:background="@color/title_intervel_color" />

                <!-- 华晨云 -->

                <RelativeLayout
                    android:id="@+id/huachenyun_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_title_height"
                    android:background="@drawable/system_setting_selector"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/main_hcy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/huachenyun_title_maginleft"
                        android:src="@drawable/f70_status_currenthcy" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/backupsetting_title_maginleft"
                        android:layout_toRightOf="@+id/main_hcy"
                        android:text="@string/huachenyun_title"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/setting_titletext" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/main_arrow_maginright"
                        android:src="@drawable/settings_main_arrow" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_intervel_height"
                    android:layout_gravity="center"
                    android:background="@color/title_intervel_color" />

                <!-- 工程模式 -->

                <RelativeLayout
                    android:id="@+id/programmode_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_title_height"
                    android:background="@drawable/system_setting_selector"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/main_programmode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/title_interval_text"
                        android:src="@drawable/f70_status_currentprogram" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/backupsetting_title_maginleft"
                        android:layout_toRightOf="@+id/main_programmode"
                        android:text="@string/programmode_title"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/setting_titletext" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/main_arrow_maginright"
                        android:src="@drawable/settings_main_arrow" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

        <!-- 返回栏 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/setting_main_backbar"
            android:orientation="horizontal" >

            <!--
                 <include
                 layout="@layout/f70_global_back_btn" />-->

            <ImageButton
                android:id="@+id/killprocess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/back_selector"
                android:src="@drawable/system_main_back" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/setting_main_seperate" />
        </LinearLayout>
    </FrameLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/interval_all" />
    <!-- 右边的显示图 -->

    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/setting_main_rbg" />

</LinearLayout>