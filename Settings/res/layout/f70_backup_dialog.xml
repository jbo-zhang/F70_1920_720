<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/setting_backup_titlebg"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title_name"
            android:layout_width="@dimen/back_dialog_text_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/system_back_up_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/setting_titletext" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|bottom"
            android:layout_weight="1"
            android:gravity="center" >

            <Button
                android:id="@+id/backupdialog_confirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/setting_backup_dialog_l_selector"
                android:text="@string/deleteconfirm"
                android:textColor="@drawable/f70_textview_click"
                android:textSize="@dimen/setting_titletext" />
            <!--
                 <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/deleteconfirm"
                android:textColor="@drawable/f70_textview_click"
                android:clickable="true"
                android:textSize="@dimen/setting_titletext" />
            -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|bottom"
            android:layout_weight="1"
            android:gravity="center" >

            <!--
                 <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:text="@string/deletequit"
                android:textColor="@drawable/f70_textview_click"
                android:textSize="@dimen/setting_titletext" />
            -->

            <Button
                android:id="@+id/backupdialog_quit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/setting_backup_dialog_r_selector"
                android:text="@string/deletequit"
                android:textColor="@drawable/f70_textview_click"
                android:textSize="@dimen/setting_titletext" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
