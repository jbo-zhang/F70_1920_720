<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="@string/date_and_time">
    <com.hwatong.settings.MySwitchPreference
        android:key="24 hour"
        android:title="@string/date_time_24hour"
        android:widgetLayout="@layout/switch_pref"/>
    
    <com.hwatong.settings.MySwitchPreference
        android:key="auto_time"
        android:title="@string/date_time_auto"
        android:summaryOn="@string/date_time_auto_summaryOn"
        android:summaryOff="@string/date_time_auto_summaryOff"
        android:widgetLayout="@layout/switch_pref"/>
    <com.hwatong.settings.MyDateTimePreference
        android:title="@string/date_and_time"
        android:key="datetime"
        />
