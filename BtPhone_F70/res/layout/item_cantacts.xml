<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hwatong="http://schemas.android.com/apk/res/com.hwatong.btphone.ui"
    android:layout_width="match_parent"
    android:layout_height="61px"
    android:paddingRight="5dp" >

    <com.hwatong.btphone.ui.DrawableTextView
        android:id="@+id/dtv_name"
        android:layout_width="wrap_content"
        android:layout_height="61px"
        android:ellipsize="end"
        android:layout_marginLeft="10dp"
        android:drawablePadding="20dp"
        android:paddingLeft="8dp"
        android:textColor="#FFFFFF"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textSize="@dimen/item_contacts_textsize"
        hwatong:drawableHeight="@dimen/item_contacts_drawable_height"
        hwatong:drawableWidth="@dimen/item_contacts_drawable_width" />

    <TextView
        android:id="@+id/tv_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="61px"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:textColor="@color/item_text_color"
        android:textSize="@dimen/item_contacts_textsize" />

</RelativeLayout>