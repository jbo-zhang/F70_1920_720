<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/radio_search_layout"
    android:layout_width="424dp"
    android:layout_height="match_parent"
    android:background="@drawable/bg_radio_update"
    android:orientation="vertical" >

    <ProgressBar
        android:id="@+id/loading_img"
        android:layout_width="@dimen/progress_width"
        android:layout_height="@dimen/progress_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/progress_margin_top"
        android:indeterminateDrawable="@drawable/progress_medium" />

    <TextView
        android:id="@+id/txt_radio_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/progress_text_margin_top"
        android:layout_marginLeft="@dimen/progress_text_margin_left"
        android:text="@string/search_radio"
        android:textColor="@android:color/white"
        android:textSize="@dimen/progress_text_size" />

</LinearLayout>