<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/radio_list_item_height"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_icon_play"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/radio_list_item_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:contentDescription="@null"
        android:src="@drawable/img_is_playing"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_freq"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/radio_list_item_height"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_marginLeft="50dp"
        android:text="@string/initfreq"
        android:textColor="@color/blue"
        android:textSize="22px" />

    <ImageView
        android:id="@+id/iv_collect_star"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/radio_list_item_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="50dp"
        android:contentDescription="@null"
        android:src="@drawable/collect_star_selector"
        android:visibility="gone" />

</RelativeLayout>